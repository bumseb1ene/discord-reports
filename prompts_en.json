{
  "application": {
    "name": "Hell Let Loose Admin Bot",
    "version": "1.0"
  },
  "prompts": {
    "classification": {
      "comprehensive": {
        "metadata": {
          "max_length": 186
        },
        "templates": {
          "instructions": "Please classify the following text in EXACTLY four lines:\nCATEGORY: <[legit, insult, temp_ban, perma, unknown]>\nSEVERITY: <[warning, temp_ban, perma, none]>\nREASON: <short reason>\nEXPLANATION: <brief summary>\n\nWrite your entire answer in English."
        }
      }
    },
    "actions": {
      "warning": {
        "metadata": {
          "max_length": 200
        },
        "templates": {
          "template": "Attention {author_name}, this is a warning. Reason: {reason}"
        }
      },
      "tempban": {
        "metadata": {
          "max_length": 200
        },
        "templates": {
          "template": "You receive a 24h ban, {author_name}. Reason: {reason}"
        }
      },
      "perma": {
        "metadata": {
          "max_length": 200
        },
        "templates": {
          "template": "You are permanently banned, {author_name}. Reason: {reason}"
        }
      },
      "kick": {
        "metadata": {
          "max_length": 200
        },
        "templates": {
          "template": "You are kicked from the server, {author_name}. Reason: {reason}"
        }
      },
      "positive": {
        "metadata": {
          "max_length": 150
        },
        "templates": {
          "template": "Thank you, {author_name}, for your message: {reason}"
        }
      },
      "player_not_found": {
        "metadata": {
          "max_length": 150
        },
        "templates": {
          "template": "Sorry, {author_name}, we couldn't find a matching player."
        }
      }
    }
  }
}
